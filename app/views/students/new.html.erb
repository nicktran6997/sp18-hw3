<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name) %>

  <%= label_tag(:major_name, "Major") %>
  <%= text_field_tag(:major_name, nil, placeholder: @placeholder_major) %>

  <%= label_tag(:year, "Year") %>
  <%= text_field_tag(:year) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create Student") %>

  <%end%>